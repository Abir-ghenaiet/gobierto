<% if available_periods.any? %>
  <div class="breadcrumb year_only">
    <div class="bread_hover">

      <div class="bread_links">
        <%= link_to selected_period,
          selected_period_path,
          id: selected_period,
          "aria-haspopup" => "true",
          "aria-label" => t(".select_period"),
          "aria-owns" => "popup-year",
          "aria-controls" => "popup-year",
          "aria-expanded" => "false" %>
        <i class="fa fa-sort-down"></i>
      </div>

      <div id="popup-year" class="line_browser clearfix" role="group">
        <div class="bread_links clearfix">
          <%= link_to selected_period, selected_period_path %>
          <i class="fa fa-sort-down"></i>
        </div>

        <div class="col" data-level="0">
          <table class="med_bg">

            <% available_periods.each do |period| %>
              <tr role="presentation" >
                <td data-code="<%= period %>"><%= link_to period, gobierto_citizens_charters_service_charter_period_path(@service.slug, @charter.slug, period: period, period_interval: @charter.reference_edition.period_interval) %></td>
              </tr>
            <% end %>

          </table>
        </div>
      </div>

    </div>
  </div>
<% end %>
