<%
  set_meta_tags title: t('.title', place: @place.name, year: @year)
  set_meta_tags description: t('.description', place: @place.name, year: @year)
%>

<% content_for :breadcrumb_current_item do %>
  <h1>
    <%= link_to t('gobierto_budgets.layouts.menu_subsections.execution'), gobierto_budgets_budgets_execution_path(year: GobiertoBudgets::SearchEngineConfiguration::Year.last) %>
  </h1>
<% end %>

<div class="column">
  <div class="block">
    <div class="pure-g header_block_inline">
      <div class="pure-u-1 pure-u-md-1-2">
        <div class="inline_header">
          <h2 class="with_description p_h_r_1"><%= t('.title') %></h2>
          <%= render partial: 'gobierto_budgets/budgets/year_breadcrumb', locals: {path_calculation_method: :gobierto_budgets_budgets_path} %>

          <p><%= t('.description') %></p>
          <p><strong><%= t('.last_update') %>:</strong> <span class="last_update"></span>.</p>
        </div>
      </div>

      <div class="pure-u-1 pure-u-md-1-2 metric_boxes m_v_4">
        <div class="pure-g">
          <div class="pure-u-1-2 pure-u-md-1-2 metric_box">
            <div class="inner">
              <h3><%= t('.metric.execution.title') %></h3>
              <div class="metric">54%</div>
              <div class="explanation">
                0,74% <%= t('.metric.execution.message') %> 2015
              </div>
            </div>
          </div>

          <div class="pure-u-1-2 pure-u-md-1-2 metric_box">
            <div class="inner">
              <h3><%= t('.metric.budget.title') %></h3>
              <div class="metric">4.483M</div>
              <div class="explanation">
                0,74% <%= t('.metric.budget.message') %> 2015
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="pure-g">
      <div class="pure-u-1">
        <h2 class="with_description"><%= t('.vis.expenses.title') %></h2>
        <div class="ib"><span class="p_h_r_0_5 soft"><%= t('.sort') %></span>
          <div class="button-group ib" role="group">
            <button class="button-grouped active sort-highest-G"><%= t('.higher_execution') %></button>
            <button class="button-grouped sort-lowest-G"><%= t('.lower_execution') %></button>
          </div>
        </div>

        <div class="option pure-1-6 f_right">
          <input type="checkbox" name="show-absolute" id="show-absolute-G" data-checked="false">
          <label for="show-absolute-G">
            <span></span>
            <%= t('.vis.absolute') %>
          </label>
        </div>

        <div class="expenses_execution"></div>
      </div>
      <div class="pure-u-1">
        <h2 class="with_description"><%= t('.vis.income.title') %></h2>
        <div class="ib"><span class="p_h_r_0_5 soft"><%= t('.sort') %></span>
          <div class="button-group ib" role="group">
            <button class="button-grouped active sort-highest-I"><%= t('.higher_execution') %></button>
            <button class="button-grouped sort-lowest-I"><%= t('.lower_execution') %></button>
          </div>
        </div>

        <div class="option pure-1-6 f_right">
          <input type="checkbox" name="show-absolute" id="show-absolute-I" data-checked="false">
          <label for="show-absolute-I">
            <span></span>
            <%= t('.vis.absolute') %>
          </label>
        </div>

        <div class="income_execution"></div>
      </div>
    </div>
  </div>


</div>

<%= render partial: 'widget_template_deviation' %>
