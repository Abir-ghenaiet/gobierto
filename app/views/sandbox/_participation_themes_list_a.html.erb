<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h2 class="with_separator">Temas</h2>
        <p class="soft">Aporta tus mejores ideas para mejorar Alcobendas y la vida de todos los que residimos aquí.</p>

        <%= image_tag 'illustrations/forum.svg', class: 'pure-img m_v_1' %>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 groups">
        <div class="pure-g three_by_three">
          <% for i in [
            'Cooperación, sensibilización y Ayuda Humanitaria',
            'Cultura',
            'Deportes',
            'Educación',
            'Integración Social e Inmigración',
            'Mayores',
            'Medio Ambiente',
            'Mujer e Igualdad',
            'Participación Ciudadana',
            'Salud y Bienestar Social',
            'Consumo',
            'Juventud e Infancia',
            'Comercio',
            'Urbanismo']
          %>
            <%= render 'theme_teaser', {name: i, description: 'Bibliotecas, centros culturales, programación', meta: true} %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
