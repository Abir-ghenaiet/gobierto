<div class="content_block themed <% if negative %> negative <% end %>">
  <h2 class="hidden left">¿Hechas en falta alguna pregunta?</h3>

  <a href="#" class="hidden button wide outline rounded fat">Lanzar pregunta</a>

  <p class="lead"><%= question %></p>

  <% if date %>
    <div class="date right">
      <i class="fa fa-calendar"></i> <strong>Finaliza</strong> en 3 días
    </div>
  <% end %>

  <% if meta %>
    <div class="meta right">
      <div class="ib"><i class="fa fa-comment"></i> 30</div>
      <div class="ib"><i class="fa fa-users"></i> 50</div>
    </div>
  <% end %>
</div>
