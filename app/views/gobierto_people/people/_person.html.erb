<div class="person-item pure-g">
  <div class="pure-u-1 pure-u-md-1-6">
    <%= link_to person do %>
      <% if person.avatar_url.present? %>
        <%= image_tag person.avatar_url, class: "avatar", alt: 'Foto de ' + person.name %>
      <% end %>
    <% end %>
  </div>
  <div class="pure-u-1 pure-u-md-5-6 person-name">
    <%= link_to person do %>
      <h2><%= person.name %></h2>
    <% end %>
    <div class="soft"><%= person.charge %></div>
  </div>
</div>
