<%= render "gobierto_people/people/content_for_breadcrumb" %>

<h1><%= t(".title", person_name: @person.name) %></h1>

<%= render("user/subscriptions/subscribable_box",
           subscribable: @person,
           title: t(".subscribable_box.title", person_name: @person.name)) %>

<div class="events-filter">

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-1-2">

      <h3 class="filter-option <%= class_if("active", controller_name == "person_events") %>">
        <%= link_to t(".upcoming_events"), gobierto_people_person_events_path(@person) %>
      </h3>

    </div>

    <div class="pure-u-1 pure-u-md-1-2">

      <h3 class="filter-option <%= class_if("active", controller_name == "past_person_events") %>">
        <%= link_to t(".past_events"), gobierto_people_person_past_events_path(@person) %>
      </h3>

    </div>

  </div>

</div>

<div class="events-summary person_event-list item-list">

  <%= render @events %>

</div>
