<div class="column">

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-1-2">

      <div class="p_h_2">

        <h1><%= @home_text || t(".title") %></h1>

        <h2><%= t(".people_summary.title", site_name: current_site.name) %></h2>

        <div class="people-summary person-list item-list">

          <%= render "gobierto_people/people/people_filter" %>
          <%= render @people %>

          <%= link_to t(".people_summary.view_all"), gobierto_people_people_path, class: "button small" %>

        </div>

      </div>

    </div>

    <div class="pure-u-1 pure-u-md-1-2">

      <div class="p_h_2">

        <%= render("user/subscriptions/subscribable_box",
                   subscribable: GobiertoPeople::PersonEvent,
                   title: t(".subscribable_box.title")) %>

        <div class="events-summary person_event-list item-list">

          <div class="pure-g">

            <div class="pure-u-1 pure-u-md-1-2">

              <h3>
                <%= t(".events_summary.upcoming_events") %>
              </h3>

            </div>

            <div class="pure-u-1 pure-u-md-1-2">

              <h3 class="soft">
                <%= link_to t(".events_summary.past_events"), gobierto_people_past_events_path %>
              </h3>

            </div>

          </div>

          <%= render @events %>

          <%= link_to t(".events_summary.view_all"), gobierto_people_events_path, class: "button small" %>

        </div>

      </div>

    </div>

  </div>

  <div class="separator"></div>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-1-2">

      <div class="p_h_2 box">

        <ul class="site-references inner" data-turbolinks="false">
          <li><%= link_to t(".statements"), gobierto_people_statements_path %></li>
          <li><%= link_to t(".gifts"), gobierto_people_gifts_path %></li>
          <li><%= link_to t(".travels"), gobierto_people_travels_path %></li>
        </ul>

      </div>

    </div>

    <div class="pure-u-1 pure-u-md-1-2">

      <div class="p_h_2">

        <h2><%= t(".posts_summary.title") %></h2>

        <div class="posts-summary person_post-list item-list">

          <%= render @posts %>

          <%= link_to t(".posts_summary.view_all"), gobierto_people_posts_path, class: "button small" %>

        </div>

      </div>

    </div>

  </div>

</div>
