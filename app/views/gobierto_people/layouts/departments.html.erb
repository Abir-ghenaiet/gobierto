<% content_for :content do %>

  <div class="column">

    <div class="pure-g">

      <div class="pure-u-1 pure-u-md-7-24">
        <ul>
          <% current_site.departments.sorted.each do |department| %>
            <li><%= link_to department.name, gobierto_people_department_people_path(department_slug: department.slug) %></li>
          <% end %>
        </ul>
      </div>

      <div class="pure-u-1 pure-u-md-17-24 main_people_content">

        <%= yield %>

      </div>

    </div>

  </div>

<% end %>

<%= render template: "gobierto_people/layouts/application" %>
