<%= render "admin/shared/validation_errors", resource: @admin_confirmation_form %>

<%= form_for(@admin_confirmation_form, as: :admin_confirmation, url: :admin_admin_confirmations) do |f| %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item input_text">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "felipe@gmail.com" %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

      <div class="widget_save">

      <%= f.submit "Send", class: "button" %>

      </div>

    </div>

  </div>

<% end %>
