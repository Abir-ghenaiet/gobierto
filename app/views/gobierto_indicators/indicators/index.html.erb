<div class="intro_section clearfix">
	<div class="column">
		<div class="pure-g">
			<div class="pure-u-1 pure-u-md-2-5">
        <p class="intro_desc"><%= t("gobierto_indicators.copy.title", place: @site.place.name) %></p>
			</div>
			<div class="pure-u-1 pure-u-md-3-5">
				<%= image_tag('illustrations/integra.jpg', class: 'img-fluid side_50 pb1') %>
			</div>
		</div>
	</div>
</div>

<div class="column">
  <nav class="sections-nav">
    <ul>
      <li><%= t("gobierto_indicators.layouts.menu_subsections.population") %></li>
      <li><%= t("gobierto_indicators.layouts.menu_subsections.employment") %></li>
      <li><%= t("gobierto_indicators.layouts.menu_subsections.economy") %></li>
    </ul>
  </nav>
  
  <div class="sections">
  	<section id="poblacion" class="mb4">
  		<div class="pure-g">
  			<div class="pure-u-1 pure-u-md-1">
  				<h2 class="section_headline" id="population"><%= t("gobierto_indicators.copy.population.title") %></h2>
  				<div id="age_distribution" class="main_graphic">
  					<h3 class="chart_headline"><%= t("gobierto_indicators.copy.population.intro") %></h3>
  				</div>
  			</div>
  		</div>
  		
  		<div class="pure-g padded_cols">
        <%= render 'card_simple', {card_class: 'population_card'} %>
        <%= render 'card_sparkline_table', {card_class: 'births', data_trend: 'up', data_type: 'percentage_by_thousand', data_freq: 'annual'} %>
        <%= render 'card_sparkline_table', {card_class: 'deaths', data_trend: 'down', data_type: 'percentage_by_thousand', data_freq: 'annual'} %>
        <%= render 'card_comparison', {card_class: 'active_pop', data_type_first: 'percentage', data_type_second: 'figure', data_freq: 'daily' } %>
        <%= render 'card_comparison', {card_class: 'houses', data_type_first: 'figure', data_type_second: 'figure', data_freq: 'daily' } %>
        <%= render 'card_bars', {card_class: 'cars', data_type: 'per_inhabitant', data_freq: 'annual' } %>
  		</div>
  	</section>

  	<section id="empleo" class="mb4">
  		<div class="pure-g">
  			<div class="pure-u-1 pure-u-md-2-3">
  				<h2 class="section_headline" id="employment"><%= t("gobierto_indicators.copy.employment.title") %></h2>
  			</div>
  		</div>
  		<div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
          <h3 class="chart_headline center"><%= t("gobierto_indicators.copy.employment.rate_comparison") %></h3>
          <div id="unemployment_rate" class="small_graphic"></div>
        </div>
  			<div class="pure-u-1 pure-u-md-1-3">
  				<h3 class="chart_headline center"><%= t("gobierto_indicators.copy.employment.sex_comparison") %></h3>
  				<div id="unemployment_sex" class="small_graphic"></div>
  			</div>
  			<div class="pure-u-1 pure-u-md-1-3">
  				<h3 class="chart_headline center"><%= t("gobierto_indicators.copy.employment.age_comparison") %></h3>
  				<div id="unemployment_age" class="small_graphic"></div>
  			</div>
  		</div>
  		
  		<div class="pure-g padded_cols">
        <%= render 'card_simple', {card_class: 'ss_members'} %>
        <%= render 'card_sparkline_table', {card_class: 'unemployed_sector', data_trend: 'down', data_type: 'figure', data_freq: 'daily'} %>
        <%= render 'card_sparkline_table', {card_class: 'contracts_sector', data_trend: 'up', data_type: 'figure', data_freq: 'daily'} %>
        <%= render 'card_simple', {card_class: 'freelancers'} %>
        <%= render 'card_simple', {card_class: 'companies'} %>
        <%= render 'card_comparison', {card_class: 'contracts_comparison', data_type_first: 'figure', data_type_second: 'figure', data_freq: 'daily' } %>
  		</div>
  	</section>


  	<section id="economia" class="mb4">
  		<div class="pure-g">
  			<div class="pure-u-1">
          <h2 class="section_headline" id="economy"><%= t("gobierto_indicators.copy.economy.title") %></h2>
          
  				<div id="rent_distribution" class="main_graphic">
  					<div class="annotations">
  						<h3 class="chart_headline"><%= t("gobierto_indicators.copy.economy.intro") %></h3>
  						<div class="rent-anno"><%= t("gobierto_indicators.copy.economy.legend.inhabitants") %> <span class="arrow">↑</span></div>
  						<div class="pop-anno"><%= t("gobierto_indicators.copy.economy.legend.income") %> <span class="arrow">→</span></div>
  					</div>
  				</div>
  			</div>
  		</div>
  		
  		<div class="pure-g padded_cols">
        <%= render 'card_table', {card_class: 'income', data_type_one: 'currency', data_type_two: 'currency', data_freq: 'daily'} %>
  		</div>
  	</section>
  </div>
</div>
