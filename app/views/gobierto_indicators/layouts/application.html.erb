<% content_for :javascript_include do %>
  <%= javascript_tag do %>
    window.populateData = {
      token: "<%= @site.configuration.populate_data_api_token %>",
      municipalityId: "<%= @site.place.id %>",
      municipalityName: "<%= @site.place.name %>",
      provinceId: "<%= @site.place.province.id %>",
      provinceName: "<%= @site.place.province.name %>",
      ccaaId: "<%= @site.place.province.autonomous_region.id %>",
      ccaaName: "<%= @site.place.province.autonomous_region.name %>",
      year: <%= APP_CONFIG["gobierto_observatory"]["year"] %>,
      endpoint: "<%= APP_CONFIG["populate_data"]["endpoint"] %>"
    }
  <% end %>
<% end %>

<%= render template: "layouts/application" %>
