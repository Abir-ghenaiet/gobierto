<%= render "user/shared/validation_errors", resource: @user_registration_form %>

<%= form_for(@user_registration_form, as: :user_registration, url: :user_registrations) do |f| %>

  <div class="form_item input_text">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Fernando GonzÃ¡lez" %>
  </div>

  <div class="form_item input_text">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "fgonzalez@gmail.com" %>
  </div>

  <div class="form_item input_text">
