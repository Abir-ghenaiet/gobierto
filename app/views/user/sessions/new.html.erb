<div class="<%= 'modal zoom-anim-dialog modal_background' if @modal %>"
     style="<%= "background-image: url(#{ image_url('illustrations/emojis.svg')})" if @modal %>">

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-11-24 padded_line_box m_v_2 ">

      <div class="login_box">

        <h2><%= t(".session_title") %></h2>

        <%= render "session_form" %>

      </div>

      <div class="password_recovery_box hidden">

        <h2><%= t(".password_title") %></h2>

        <%= render "new_password_form" %>

      </div>

    </div>

    <div class="pure-u-md-2-24"></div>

    <div class="pure-u-1 pure-u-md-11-24 padded_line_box m_v_2">

      <h2><%= t(".registration_title") %></h2>

      <%= render "registration_form" %>

    </div>

  </div>

</div>
