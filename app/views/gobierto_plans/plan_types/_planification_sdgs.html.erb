<div class="">
  <div class="block">
    <div class="pure-g header_block_inline m_b_1">
      <div class="pure-u-1 pure-u-md-12-24">
        <h2 class="with_description"><%= t(".sdgs_title") %></h2>
        <p>
          <%= t(".sdgs_description") %>
        </p>
      </div>
      <div class="pure-u-1 pure-u-md-12-24 right">
      </div>
    </div>
  </div>
  <div class="sdg_list_header">
    <div class="sdg_icons">
    </div>
  </div>

  <% @sdg.sdgs_distribution.each do |sdg, projects| %>
    <div class="sdg_label sdg-<%= sdg.external_id %> m_b_2" >
      <%= sdg.name %>
    </div>

    <div class="pure-g m_b_1">
      <div class="pure-u-1 pure-u-md-1-3 m_b_2">
        <%= t(".sdg_projects_title") %>:
      </div>

      <div class="pure-u-1 pure-u-md-2-3">
        <% projects.each do |project| %>
          <div class="m_b_1">
            <i class="fas fa-angle-right"></i>
            <%= link_to project.name, "#" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
