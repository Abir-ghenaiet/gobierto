<div class="sdg_label sdg-<%= sdg.external_id %> m_b_2" >
  <%= "#{sdg.external_id}. #{sdg.name}" %>
</div>

<% if projects.blank? %>
  <%= t(".sdg_projects_empty") %>
<% else %>
  <div class="pure-g m_b_1">
    <div class="pure-u-1 pure-u-md-1-3 m_b_2 sdg_projects_title">
      <%= t(".sdg_projects_title") %>:
    </div>

    <div class="pure-u-1 pure-u-md-2-3">
      <% projects.each do |project| %>
        <div class="m_b_1">
          <i class="fas fa-angle-right"></i>
          <%= link_to project.at_current_version.name, gobierto_plans_plan_url(slug: @plan.plan_type.slug, year: @plan.year, anchor: project.uid) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
