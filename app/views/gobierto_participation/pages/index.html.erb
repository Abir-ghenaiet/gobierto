<% content_for :breadcrumb_current_item do %>
  <h1>
    <%= link_to t('.news'), gobierto_participation_pages_path %>
  </h1>
<% end %>

<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <div class='content_side'>
          <h2 class='with_separator'>
            <%= t('.title') %>
          </h2>

          <div>
            <small><%= link_to t('.all_pages'), gobierto_participation_pages_path %></small>
          </div>

          <h4 class="with_light_separator m_t_1"><%= t('.filter') %></h4>

          <ul class="link_list">
            <% @issues.each do |issue| %>
              <li>
                <%= link_to issue.name , gobierto_participation_pages_path(issue_id: issue.slug) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class='pure-u-1 pure-u-lg-2-3'>
        <% if @pages && @pages.any? %>
          <% @pages.each do |page| %>
            <div class='news_teaser'>
              <h3>
                  <%= link_to page.title , gobierto_participation_page_path(page.slug) %>
              </h3>

              <div class='meta'>
                <time><%= time_ago_in_words(page.created_at) %></time>
              </div>

              <% if page.main_image %>
                <%= image_tag page.main_image, title: page.title, width: '221px', class: 'pure-img m_v_1' %>
                <p>
                  <%= truncate(strip_tags(page.body), length: 60, escape: false) %>
                </p>
              <% else %>
                <%= truncate(strip_tags(page.body), length: 60, escape: false) %>
              <% end %>
            </div>
          <% end %>

          <%= paginate @pages %>

        <% end %>
      </div>
    </div>
  </div>
</div>
