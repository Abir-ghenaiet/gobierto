<% if try(:current_process).present? %>
  <% content_for :breadcrumb_current_item do %>
    <strong>
      <%= link_to t('gobierto_participation.layouts.menu_subsections.processes'), gobierto_participation_processes_path %>
    </strong>

    <span role="separator">/</span>

    <h1>
      <%= link_to current_process.title, gobierto_participation_process_path(current_process.slug) %>
    </h1>
  <% end %>
<% end %>

<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <div class='content_side'>
          <h2 class='with_separator'>
            <%= t('.title') %>
          </h2>

          <div>
            <small><%= link_to t('gobierto_participation.participation_attachments'), gobierto_participation_attachments_path %></small>
          </div>

          <h4 class='with_light_separator m_t_1'><%= t('.filter') %></h4>
          <ul class='link_list'>
            <% @issues.each do |issue| %>
              <li>
                <%= link_to issue.name , gobierto_participation_process_attachments_path(issue_id: issue.slug) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class='pure-u-1 pure-u-lg-2-3'>
        <article class='news_article'>
          <h1><%= link_to @attachment.name, @attachment.url, target: '_blank' %></h1>
          <div class='meta'>
            <time>
              <%= l(@attachment.updated_at, format: :long) %>
            </time>
          </div>
          <%= raw @attachment.description %>
          <div class='document'>
            <div class='soft'>
              <small>
                <%= @attachment.extension.upcase %>
                 Â·
                <%= number_to_human_size(@attachment.file_size, precision: 2, separator: ',') %>
              </small>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>
