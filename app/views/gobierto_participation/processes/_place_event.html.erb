<div class="place_event-item place-item pure-g">
  <div class="badge pure-u-1-3 pure-u-md-5-24">
    <strong><%= l(event.starts_at, format: '%e %b').upcase %></strong>
  </div>

  <div class="pure-u-1 pure-u-md-19-24 event-content">
    <h3><%= link_to(event.title, gobierto_participation_event_path(event.slug, container_type: event.collection_container.container_type, container_id: event.collection_container.id)) %></h3>
    <div class="meta">
      <div class="ib">
        <i class="fa fa-clock-o"></i> <%= l(event.created_at, format: '%H:%M') %>
      </div>

      <% if (location = event.first_location) %>
        <div class="ib">
          <i class="fa fa-map-marker"></i>
          <%= link_to_if location.geolocated?, location.name, external_location_service_url(location) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
