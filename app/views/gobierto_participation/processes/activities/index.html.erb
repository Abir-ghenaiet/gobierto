<% if current_process %>
  <% content_for :breadcrumb_current_item do %>
    <strong>
      <%= link_to t('gobierto_participation.layouts.menu_subsections.processes'), gobierto_participation_processes_path %>
    </strong>

    <span role="separator">/</span>

    <h1>
      <%= link_to current_process.title, gobierto_participation_process_path(current_process.slug) %>
    </h1>
  <% end %>
<% end %>

<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <div class='content_side'>
          <h2 class='with_separator'>
            <%= t('.title') %>
          </h2>
          <% pending do %>
            <div>
              <small><%= link_to t('.all_activities'), gobierto_participation_activities_path %></small>
            </div>

            <h4 class="with_light_separator m_t_1"><%= t('.filter') %></h4>

            <ul class="link_list">
              <% @issues.each do |issue| %>
                <li>
                  <%= link_to issue.name , gobierto_participation_process_activities_path(process_id: current_process.slug, issue_id: issue.slug) %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>

      <div class='pure-u-1 pure-u-lg-2-3'>
        <div class="activity_feed">
          <% if @activities.any? %>
            <% @activities.each do |activity| %>
              <div class="activity_item">
                <h2>
                  <% if try(:current_process).present? && !@issue.present? %>
                    <% notification_url = nil %>
                  <% elsif @issue %>
                    <% notification_url = nil %>
                  <% elsif current_module == "gobierto_participation" %>
                    <% notification_url = nil %>
                  <% end %>
                  <%= link_to(notification_url) do %>
                    <%= activity.translated_action %>
                    <span class="secondary"><%= activity.subject_name %></span>
                  <% end %>
                </h2>
                <div class="date"><%= l(activity.created_at.to_date, format: :short) %></div>
              </div>
            <% end %>
          <% else %>
            <p><%= t(".no_new_activities") %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
