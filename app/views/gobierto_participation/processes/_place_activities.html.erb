<div class="place_latest-item place-item pure-g">
  <div class="badge pure-u-1-3 pure-u-md-5-24">
    <strong><%= l(activity.created_at, format: '%e %b').upcase %></strong>
  </div>

  <div class="pure-u-1 pure-u-md-19-24 news-content">
    <h3>
      <% if @process %>
        <%= link_to activity.translated_action + " " + activity.subject_name, 'gobierto_participation_process_page_path(process_id: @process.slug, id: activity.slug)' %>
      <% elsif @issue %>
        <%= link_to activity.translated_action + " " + activity.subject_name, 'gobierto_participation_issue_page_path(issue_id: @issue.slug, id: activity.slug)' %>
      <% else %>
        <%= link_to activity.translated_action + " " + activity.subject_name, 'gobierto_participation_participation_activity_path(activity.id)' %>
      <% end %>
    </h3>
  </div>
</div>
