<div class="person_event-item person-item pure-g">
  <div class="date_badge pure-u-1 pure-u-lg-1-6">
    <div class="day">
      <%= event.starts_at.day %>
      <%= l(event.starts_at, format: "%b").capitalize %>
    </div>
    <div class="hour"><%= event.starts_at.strftime('%H:%M') %></div>
  </div>
  <div class="pure-u-1 pure-u-md-5-6 event-content">
    <h3>
      <a href="participation_agenda_event.html<%= '?from=participation_group' if params['from'] == 'participation_group' %>"><%= event.title %></a>
    </h3>
    <div class="meta">
      <div>
        <div class="ib p_h_r_0_5">
          <i class="fa fa-map-marker"></i> <a href="https://www.google.com/maps/place/40.41874,-3.693944">Ayuntamiento de Madrid</a>
        </div>
        <div class="ib">
          <i class="fa fa-folder"></i> Agenda de: <a href="#">Cultura</a>
        </div>
      </div>
    </div>

    <p>
      <%= event.description %>
    </p>

    <div class="extra_info listed">
      <div class="ib p_h_r_0_5">
        <a href="#" class="button outline rounded wide attend_event"><i class="fa fa-check hidden"></i> <span>Quiero asistir</span></a>
      </div>

      <div class="ib p_h_r_0_5">
        <i class="fa fa-users"></i> <strong>55 vecinos</strong> asistirán
      </div>

      <div class="ib">
        <i class="fa fa-calendar"></i> <a href="#">Añadir a mi calendario</a>
      </div>


    </div>
  </div>
</div>
