<div class="person_event-item person-item pure-g">
  <div class="date_badge pure-u-1 pure-u-lg-1-6">
    <div class="day">
      <%= event.starts_at.day %>
      <%= l(event.starts_at, format: "%b").capitalize %>
    </div>
    <div class="hour"><%= event.starts_at.strftime('%H:%M') %></div>
  </div>
  <div class="pure-u-1 pure-u-md-5-6 event-content">
    <h3>
      <%= link_to(event.title, gobierto_participation_participation_event_path(event.slug)) %></h3>
    </h3>
    <div class="meta">
      <div>
        <% if (location = event.first_location) %>
          <div class="ib p_h_r_0_5">
            <i class="fa fa-map-marker"></i>
            <%= link_to_if location.geolocated?, location.name, external_location_service_url(location) %>
          </div>
        <% end %>
        <% if (issue = event.first_issue) %>
          <div class="ib">
            <i class="fa fa-folder"></i>
            <%= t('.agenda_of') %>
            <%= link_to event.first_issue.name, gobierto_participation_issue_path(event.first_issue.slug) %></a>
          </div>
        <% end %>
      </div>
    </div>

    <p>
      <%= event.description %>
    </p>

    <div class="extra_info listed">
      <div class="ib p_h_r_0_5">
        <a href="#" class="button outline rounded wide attend_event">
          <i class="fa fa-check hidden"></i> <span><%= t('.want_to_attend') %></span>
        </a>
      </div>

      <div class="ib p_h_r_0_5">
        <i class="fa fa-users"></i>
        <%= t('.neighbors_count_html', count: event.attendees.count) %>
      </div>

      <div class="ib">
        <i class="fa fa-calendar"></i> <a href="#"><%= t('.add_to_calendar') %></a>
      </div>
    </div>
  </div>
</div>
