<div class="gradient-bg">
  <div class="column">
    <h2 class="with_separator"><%= t('.up_to_date', site_title: current_site.title) %></h2>

    <div class="pure-g agenda three_by_three">
      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.agenda') %></h3>
        <div class="p_1  content_block">
          <% if @participation_events %>
            <% @participation_events.each do |event| %>
              <%= render 'gobierto_participation/processes/place_event', { event: event } %>
            <% end %>
          <% else %>
            <%= t('.no_events') %>
          <% end %>
        </div>
        <% if @participation_events %>
          <%= link_to t('.show_more_events'), gobierto_participation_events_path %>
        <% end %>
      </div>

      <!-- TODO: Pages/News separation pending -->
      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.the_last') %></h3>
        <div class="p_1  content_block">
          <% if @participation_activities.any? %>
            <% @participation_activities.each do |activity| %>
              <%= render 'gobierto_participation/processes/place_activities', { activity: activity } %>
            <% end %>
          <% else %>
            <%= t('.no_activities') %>
          <% end %>
        </div>
        <% if @participation_activities.any? %>
          <%= link_to t('.show_more_updates'), gobierto_participation_notifications_path %>
        <% end %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.news') %></h3>
        <div class="p_1  content_block">
          <% if @participation_news.any? %>
            <% @participation_news.each do |notice| %>
              <%= render 'gobierto_participation/processes/place_news', { notice: notice } %>
            <% end %>
          <% else %>
            <%= t('.no_news') %>
          <% end %>
        </div>
        <% if @participation_news.any? %>
          <%= link_to t('.more_news'), gobierto_participation_pages_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
