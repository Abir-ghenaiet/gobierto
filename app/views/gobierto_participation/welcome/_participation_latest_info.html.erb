<div class="gradient-bg">
  <div class="column">
    <h2 class="with_separator"><%= t('.up_to_date', location_name: current_site.location_name) %></h2>

    <div class="pure-g agenda three_by_three">
      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title">Agenda</h3>
        <div class="p_1  content_block">
          <% if @processes_events %>
            <% @processes_events.each do |event| %>
              <!-- TODO: Pending ver si hace falta un método -->
              <!--%= render 'gobierto_participation/processes/place_event', { event: event } %-->
            <% end %>
          <% else %>
            <%= t('.no_events') %>
          <% end %>
        </div>
        <% if @processes_events %>
          <%= link_to t('.show_more_events'), gobierto_participation_events_path %>
        <% end %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title">Lo último</h3>
        <div class="p_1  content_block">
        </div>

        <a href="#">Ver más actualizaciones</a>
      </div>

      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title">Noticias</h3>
        <div class="p_1  content_block">
          <% if @participation_news.any? %>
            <% @participation_news.each do |notice| %>
              <%= render 'gobierto_participation/processes/place_news', { notice: notice } %>
            <% end %>
          <% else %>
            <%= t('.no_news') %>
          <% end %>
        </div>
        <% if @participation_news.any? %>
          <%= link_to t('.more_news'), gobierto_participation_participation_pages_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
