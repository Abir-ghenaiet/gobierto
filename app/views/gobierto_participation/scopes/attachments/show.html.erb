<% if @scope %>
  <% content_for :breadcrumb_current_item do %>
    <strong>
      <%= link_to t('gobierto_participation.layouts.menu_subsections.scopes'), gobierto_participation_scopes_path %>
    </strong>

    <span role="separator">/</span>

    <h1>
      <%= link_to @scope.name, gobierto_participation_scope_path(@scope.slug) %>
    </h1>
  <% end %>
<% end %>

<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <div class='content_side'>
          <h2 class='with_separator'>
            <%= t('gobierto_participation.shared.documents_for', container: @scope.name) %>
          </h2>
          <% pending do %>
            <%= render 'gobierto_participation/shared/attachments/attachments_filter', { scopes: @scopes } %>
          <% end %>
        </div>
      </div>
      <div class='pure-u-1 pure-u-lg-2-3'>
        <article class='news_article'>
          <%= render 'gobierto_participation/shared/attachments/attachment', { attachment: @attachment } %>
        </article>
      </div>
    </div>
  </div>
</div>
