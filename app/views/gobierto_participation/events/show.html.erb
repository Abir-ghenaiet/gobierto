<% content_for :subscribable_button do %>
  <%= render 'user/subscriptions/subscribable_button', subscribable: @event %>
<% end %>

<% content_for(:current_submodule_link) do %>
  <%= link_to t('gobierto_admin.gobierto_participation.shared.navigation.agenda'), gobierto_participation_events_path %>
<% end %>

<div class="gradient-bg">
  <div class="column">

    <div class="pure-g">
      <div class="pure-u-1 pure-u-lg-1-3">
        <h2 class="with_separator">
          <%= t('gobierto_participation.shared.diary_for', container: t('gobierto_participation.shared.participation')) %>
        </h2>
        <p class="soft"><%= t('gobierto_participation.shared.agenda_p1') %></p>

        <%= render 'gobierto_participation/shared/events/calendar_component', events: @calendar_events %>
        <div>
          <small><%= link_to t('gobierto_participation.shared.all_events'), gobierto_participation_events_path %></small>
        </div>

      </div>

      <div class="pure-u-1 pure-u-lg-2-3 event_wrapper">
        <%= render 'gobierto_participation/shared/events/event', event: @event %>
      </div>
    </div>
  </div>
</div>
