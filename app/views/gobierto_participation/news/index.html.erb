<% content_for(:current_submodule_link) do %>
  <%= link_to t('gobierto_admin.gobierto_participation.shared.navigation.news'), gobierto_participation_news_index_path %>
<% end %>

<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <div class='content_side'>
          <h2 class='with_separator'>
            <%= t('gobierto_participation.shared.news_for', container: t('gobierto_participation.shared.participation')) %>
          </h2>

          <% if @issue %>
            <div>
              <small><%= link_to t('gobierto_participation.shared.all_news'), gobierto_participation_news_index_path %></small>
            </div>
          <% end %>

          <h4 class="with_light_separator m_t_1"><%= t('gobierto_participation.shared.filter_by_theme') %></h4>

          <ul class="link_list">
            <% @issues.each do |issue| %>
              <li>
                <%= link_to issue.name , gobierto_participation_news_index_path(issue_id: issue.slug) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class='pure-u-1 pure-u-lg-2-3'>
        <% if @pages && @pages.any? %>
          <% @pages.each do |page| %>
            <%= render 'gobierto_participation/shared/pages/page_teaser', { page: page, issue: @issue } %>
          <% end %>

          <%= paginate @pages %>
        <% else %>
          <%= t('gobierto_participation.shared.no_news') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
