<div class="column">
  <!-- FIX-ME import module es6 -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" />
  <main>
    <div id="gobierto-observatory-demography-map-app"
         class="pure-g gutters m_b_4"
         data-site-name="<%= @site.name %>"
         data-logo-url="<%= @site.configuration.logo_with_fallback %>"
         data-home-url="/observatorio/mapa"
         data-endpoint-studies="/estudios.csv"
         data-endpoint-origin="/origen.csv">

      <div class="gobierto_observatory-header">
        <div class="gobierto_observatory-header-left">
          <span class="gobierto_observatory-header-title">Observatorio <span class="gobierto_observatory-symbol">/</span> Demografía</span>
          <span class="gobierto_observatory-header-council">Ayuntamiento de Getafe</span>
        </div>
        <div class="gobierto_observatory-header-right">
          <a href="#" class="gobierto_observatory-header-back">volver al Observatorio</a>
        </div>
      </div>

      <aside class="pure-u-1 pure-u-lg-1-4 gobierto_observatory-sidebar">
          <span class="gobierto_observatory-date-update">Datos actualizados a 1 de abril de 2020</span>
          <div class="gobierto_observatory-container-charts">
            <!-- <div id="close">
              <i class="fas fa-times"></i>
            </div> -->
            <div id="inhabitants" class="pure-u-1"></div>
            <div id="bar-nationality" class="pure-u-1"></div>
            <div id="bar-sex" class="pure-u-1"></div>
          </div>

          <div class="gobierto_observatory-container-charts"">
            <div id="close">
              <i class="fas fa-times"></i>
            </div>
            <h3 class="mt1 graph-title">Distribución por edades</h3>
            <div id="piramid-age-sex"></div>
          </div>

          <div id="container-bar-by-studies" class="gobierto_observatory-container-charts">
            <div id="close">
              <i class="fas fa-times"></i>
            </div>
            <h3 class="mt1 graph-title">Nivel de estudios</h3>
            <div id="bar-by-studies"></div>
          </div>

          <div id="container-bar-origin-spaniards" class="gobierto_observatory-container-charts">
            <div id="close">
              <i class="fas fa-times"></i>
            </div>
            <h3 class="mt1 graph-title">Procedencia / Españoles</h3>
            <div id="bar-by-origin-spaniards"></div>
            <span class="gobierto_observatory-legend">* Nacidos en el municipio de Getafe</span>
          </div>

          <div id="container-bar-by-origin-others" class="gobierto_observatory-container-charts">
            <h3 class="mt1 graph-title">Procedencia / Extranjeros</h3>
            <div id="bar-by-origin-others"></div>
          </div>
      </aside>

      <div class="pure-u-1 pure-u-lg-3-4 gobierto_observatory-container-map">
        <div id="map"></div>
      </div>
    </div>
  </main>
</div>
