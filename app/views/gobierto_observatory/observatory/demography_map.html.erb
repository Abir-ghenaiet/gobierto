<div class="column">
  <!-- FIX-ME import module es6 -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" />
  <main>
    <div id="gobierto-observatory-demography-map-app"
         class="pure-g gutters m_b_4"
         data-site-name="<%= @site.name %>"
         data-logo-url="<%= @site.configuration.logo_with_fallback %>"
         data-home-url="/observatorio/mapa"
         data-endpoint-studies="/estudios.csv"
         data-endpoint-origin="/origen.csv">

      <div class="pure-u-1 pure-u-lg-1-4">
        <aside class="investments-home-aside--gap">
          <div class="pure-g">
            <div id="inhabitants" class="pure-u-1 m_b_3"></div>
            <div id="bar-nationality" class="pure-u-1 m_b_3"></div>
            <div id="bar-sex" class="pure-u-1 m_b_3"></div>
          </div>

          <div class="m_b_3">
            <h3 class="mt1 graph-title">Distribución por edades</h3>
            <div id="piramid-age-sex"></div>
          </div>

          <div class="m_b_3">
            <h3 class="mt1 graph-title">Nivel de estudios</h3>
            <div id="bar-by-studies"></div>
          </div>

          <div class="m_b_3">
            <h3 class="mt1 graph-title">Procedencia / Españoles</h3>
            <div id="bar-by-origin-spaniards"></div>
          </div>

          <div class="m_b_3">
            <h3 class="mt1 graph-title">Procedencia / Extranjeros</h3>
            <div id="bar-by-origin-others"></div>
          </div>
        </aside>
      </div>

      <div class="pure-u-1 pure-u-lg-3-4">
        <div id="map"></div>
      </div>
    </div>
  </main>
</div>
