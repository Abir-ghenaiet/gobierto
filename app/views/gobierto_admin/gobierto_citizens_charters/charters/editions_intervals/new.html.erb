<%= render("gobierto_admin/gobierto_citizens_charters/shared/charter_breadcrumb") %>

<%= render("gobierto_admin/gobierto_citizens_charters/shared/navigation") %>

<div class="pure-g m_v_2">
  <div class="pure-u-3-4">
    <strong><%= link_to @charter.title, admin_citizens_charters_charter_editions_intervals_path(@charter) %></strong> »
    <%= link_to t("gobierto_admin.gobierto_citizens_charters.shared.navigation.editions_intervals"), admin_citizens_charters_charter_editions_intervals_path(@charter) %> »
    <%= t(".title") %>
  </div>
</div>

<h1>
  <%= t(".title") %>
</h1>

<%= render "gobierto_admin/shared/validation_errors", resource: @editions_interval_form %>

<%= form_for(@editions_interval_form, as: :editions_interval, url: admin_citizens_charters_charter_editions_intervals_path(@charter)) do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item select_control">
        <%= f.label :period_interval do %>
            <%= f.object.class.human_attribute_name(:period_interval) %>
            <%= attribute_indication_tag required: true %>
          <%end %>
        <%= f.select :period_interval,
          options_for_select(@editions_interval_form.available_intervals),
          include_blank: true %>
      </div>

      <div class="form_item input_text">
        <%= f.label :period do %>
          <%= f.object.class.human_attribute_name(:period) %>
          <%= attribute_indication_tag required: true %>
        <%end %>
        <%= f.text_field :period, data: {
          "language": I18n.locale,
          "autoClose": false,
          "date-format": "yyyy-mm-dd"
        },
        class: "air-datepicker"
      %>
    </div>

    </div>
    <div class="pure-u-1 pure-u-md-2-24"></div>
    <%= render partial: 'gobierto_admin/shared/save_widget', locals: { f: f, levels: [] } %>
  </div>
<% end %>
