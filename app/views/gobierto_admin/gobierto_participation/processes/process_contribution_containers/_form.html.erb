<%= render "gobierto_admin/shared/validation_errors", resource: @contribution_container_form %>

<div class="pure-g m_v_2">
  <div class="pure-u-3-4">
    <strong><%= link_to '¿Qué actividades para niños podemos poner en marcha?', 'admin_part_group_contributions_contribution' %></strong> » Configuración
  </div>
  <div class="pure-u-1-4 admin_tools right">

  </div>
</div>

<%= form_for(@contribution_container_form, as: :contribution_container, url: @contribution_container_form.persisted? ? admin_participation_process_contribution_container_path(@contribution_container_form) : :admin_participation_process_contribution_containers, data: { "globalized-form-container" => true }) do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-16-24">
      <div class="globalized_fields">
        <%= render "gobierto_admin/shared/form_locale_switchers" %>

        <% current_site.configuration.available_locales.each do |locale| %>
          <div class="form_item input_text" data-locale="<%= locale %>">
            <%= label_tag "contribution_container[title_translations][#{locale}]", f.object.class.human_attribute_name(:title) %>
            <%= text_field_tag "contribution_container[title_translations][#{locale}]", f.object.title_translations && f.object.title_translations[locale], placeholder: t(".placeholders.title", locale: locale.to_sym) %>
          </div>

          <div class="form_item textarea" data-locale="<%= locale %>">
            <%= label_tag "contribution_container[description_translations][#{locale}]", f.object.class.human_attribute_name(:description) %>
            <%= text_field_tag "contribution_container[description_translations][#{locale}]", f.object.description_translations && f.object.description_translations[locale], placeholder: t(".placeholders.description", locale: locale.to_sym) %>
          </div>
        <% end %>

      </div>

      <div class="form_item select_control">
        <%= f.label :contribution_type %>
        <%= f.select(:contribution_type, [['Idea', 'idea'], ['Question', 'question'], ['Proposal', 'proposal']], { include_blank: '-' }) %>
      </div>

      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-2 p_h_r_1">
          <div class="form_item input_text">
            <%= f.label :starts %>
            <%= f.text_field :starts, data: {
                "language": I18n.locale,
                "date-format": "yyyy-mm-dd",
                "startDate": format_time(f, :starts)
              },
              class: "air-datepicker",
              readonly: !Rails.env.test?
            %>
          </div>
        </div>

        <div class="pure-u-1 pure-u-md-1-2">
          <div class="form_item input_text">
            <%= f.label :ends %>
            <%= f.text_field :ends, data: {
                "language": I18n.locale,
                "date-format": "yyyy-mm-dd",
                "startDate": format_time(f, :ends, 2)
              },
              class: "air-datepicker",
              readonly: !Rails.env.test?
            %>
          </div>
        </div>
      </div>
    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">
      <div class="widget_save">
        <div class="form_item person-visibility-level-radio-buttons">
          <div class="options compact">
            <%= f.collection_radio_buttons(:visibility_level, @contribution_container_visibility_levels, :first, :first) do |b| %>
              <div class="option">
                <%= b.radio_button %>
                <%= b.label do %>
                  <span></span>
                  <%= t(".visibility_level.#{b.text}") %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <%= f.submit class: "button" %>
      </div>
  </div>
<% end %>
