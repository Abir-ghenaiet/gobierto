<h1><%= t(".edit_templates") %></h1>

<div class="pure-g template_editor">

  <div class="pure-u-1 pure-u-md-6-24 template_editor_side_pane">

    <div class="file_browser">
      <ul>
        <li><i class="fa fa-folder-open-o"></i> gobierto_participation
          <ul>
            <li><i class="fa fa-folder-open-o"></i> welcome
              <ul>
                <li><i class="fa fa-file-o"></i> index.html.erb</li>
              </ul>
            </li>
          </ul>
        </li>
      </ul>
    </div>

  </div>

  <div class="pure-u-1 pure-u-md-18-24 template_editor_main_pane">
    <%= form_for(
      @site_template_form, as: :site_template,
      url: @site_template_form.persisted? ? admin_gobierto_core_site_template_path(@site_template_form) : admin_gobierto_core_site_templates_path(), remote: true) do |f| %>

      <div class="action_buttons admin_tools">
        <button class="rounded outline tipsit" title="<%= t(".reset_title") %>"><%= t(".reset") %></button>
        <button class="rounded"><%= t(".preview") %></button>
        <%= button_tag(class: "rounded") do %>
          <%= t(".save") %>
        <% end %>
      </div>

      <div class="code_editor">
        <code>
          <div class="form_item input_text">
            <%= f.label :markup %>
            <%= f.text_area :markup %>
          </div>
        </code>
      </div>
    <% end %>

  </div>

</div>
