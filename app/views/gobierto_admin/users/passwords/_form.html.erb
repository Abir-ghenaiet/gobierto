<%= render "gobierto_admin/shared/validation_errors", resource: @user_password_form %>

<%= form_for(@user_password_form, as: :user_password, url: admin_user_passwords_path(@user)) do |f| %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <h2><%= @user.name %></h2>

      <div class="form_item input_text">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form_item input_text">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <%= render partial: 'gobierto_admin/shared/save_widget', locals: { f: f, levels: [], custom_submit_text: t('gobierto_admin.users.passwords.form.submit') } %>

  </div>

<% end %>
