<%= render "gobierto_admin/shared/validation_errors", resource: @admin_password_form %>

<%= form_for(@admin_password_form, as: :admin_password, url: :admin_admin_passwords, method: :patch) do |f| %>

  <%= f.hidden_field :admin_id %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item input_text">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form_item input_text">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <%= render partial: 'gobierto_admin/shared/save_widget', locals: {
      f: f, levels: [], custom_submit_text:  t('gobierto_admin.admin.passwords.edit_form.submit')
    } %>

  </div>

<% end %>
