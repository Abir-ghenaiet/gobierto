<%= render "gobierto_admin/shared/validation_errors", resource: @calendar_configuration_form %>

<!--<= render 'gobierto_admin/gobierto_calendars/calendar_configuration/navigation' %>-->

<%= form_for @calendar_configuration_form, as: :calendar_configuration, url: admin_calendars_configuration_path,  method: :patch do |f| %>

  <div class="pure-g">
    <div id="calendar-integration-picker" class="form_item input_text">
      <%= f.label :calendar_integration, t(".calendar_integration") %>
      <%= f.select :calendar_integration, @calendar_integrations_options, include_blank: true %>
    </div>
  </div>

  <div class="pure-g">
    <!--< if @calendar_configuration_form.calendar_integration == 'ibm_notes' %>-->
      <%= render 'gobierto_admin/gobierto_calendars/calendar_configuration/ibm_notes_fields', f: f %>
    <!--< elsif @calendar_configuration_form.calendar_integration == 'microsoft_exchange' %>-->
      <%= render 'gobierto_admin/gobierto_calendars/calendar_configuration/microsoft_exchange_fields', f: f %>
    <!--< elsif @calendar_configuration_form.calendar_integration == 'google_calendar' %>-->
      <%= render 'gobierto_admin/gobierto_calendars/calendar_configuration/google_calendar_fields', f: f %>
    <!--< end %>-->
  </div>

  <div class="pure-g">
    <div class="option">
      <%= f.check_box :clear_calendar_configuration %>
      <%= f.label :clear_calendar_configuration do %>
        <span></span>
        <%= t('.remove_configuration') %>
      <% end %>
    </div>
  </div>

  <div class="pure-u-1 pure-u-md-2-24"></div>

  <%= render partial: 'gobierto_admin/shared/save_widget', locals: { f: f, levels: [], custom_submit_text:  t('helpers.submit.update') } %>

<% end %>
