<table class="pages-list">
  <tr>
    <th></th>
    <th><%= GobiertoCms::Page.human_attribute_name(:title) %></th>
    <th><%= t('.description') %></th>
    <th></th>
  </tr>

  <tbody>
    <% @file_attachments.each do |file_attachment| %>
      <tr id="file_attachment-item-<%= file_attachment.id %>">
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, 'edit_admin_cms_page_path(page.id, collection_id: @collection.id)' %></td>
        <td><%= link_to file_attachment.name, 'edit_admin_cms_page_path(page.id, collection_id: @collection.id)' %></td>
        <td><%= link_to file_attachment.description, 'edit_admin_cms_page_path(page.id, collection_id: @collection.id)' %></td>
        <td><%= link_to %Q{<i class="fa fa-eye"></i> #{t('.view')}}.html_safe, 'gobierto_common_page_preview_url(page, host: current_site.domain)', class: 'view_item' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
