<div id="vocabulary_type">

  <h4 class="options compact"><%= t(".type") %></h4>

  <%= f.collection_radio_buttons(
        "vocabulary_type",
        @custom_field_form.available_vocabulary_options,
        :itself,
        :itself
      ) do |b| %>
    <div class="option">
      <%= b.radio_button %>
      <%= b.label do %>
        <span></span>
        <%= t(".#{b.text}") %>
      <% end %>
    </div>
  <% end %>

</div>
