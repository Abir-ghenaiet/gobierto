<h3><%= indicators.first.custom_field.name %></h3>
<div class="v_container">
  <div class="v_heading">
    <div class="v_el_decorated">
      <div>
        <%= t(".items") %>
      </div>
      <div>
        <%= t(".status") %>
      </div>
    </div>

    <div class="v_el_actions"></div>

  </div>

  <% indicators.each do |indicator| %>
    <div class="v_el v_el_level v_el_full_content">
      <div class="v_el_cont">
        <div class="v_el_icon_tree"><%= link_to '<i class="fas icon-caret fa-caret-right"></i>'.html_safe, '' %></div>
        <div class="v_el_title"><%= "#{indicator.custom_field.name}_#{indicator.id}" %></div>
        <div class="v_el_decorated">
          <div id="<%= "indicator_#{indicator.id}_items" %>">
            <%= indicator.value.length %>
          </div>
          <div>
          </div>
        </div>
        <div class="v_el_actions">
          <%= link_to '<i class="fas icon fa-edit"></i>'.html_safe, '#modal_edit_term', class: 'open_modal' %>
          <%= link_to '<i class="fas icon fa-trash"></i>'.html_safe, '' %>
        </div>
      </div>

      <div class="v_el v_el_content" id="<%= "indicator_#{indicator.id}" %>">

        <div class="view_type" style="display: none">
          Ver

          <div class="view_type_icon selected">
            <i class="fas fa-table"></i>
          </div>

          <div class="view_type_icon">
            <i class="fas fa-chart-area"></i>
          </div>

        </div>

        <div class="indicators_table">
          <%= hidden_field_tag(
            "project[indicators][#{indicator.id}]",
            indicator.value.to_json,
            id: "project_indicators_#{indicator.id}"
          ) %>

        <div style="width:100%;height:500px;" class="slickgrid-container"></div>

        </div>

      </div>

    </div>
  <% end %>
</div>
