<div class="admin_breadcrumb">
   <%= link_to 'Inicio', admin_root_path %> »
   <%= link_to 'Consultas sobre presupuestos', admin_budget_consultations_path %> »
   Editar consulta
</div>

<h1>
  <%= @consultation.title %>
</h1>

<div class="tabs">
  <ul>
    <li>
      <%= link_to "Consulta", edit_admin_budget_consultation_path(@consultation) %>
    </li>
    <li class="active">
      <%= link_to "Partidas", "#" %>
    </li>
  </ul>
</div>

<div class="pure-g">

  <div class="pure-u-1 pure-u-md-16-24">

    <div class="consultation-items-list">
      <ul class="block_list" data-behavior="sortable" data-sortable-target="<%= admin_budget_consultation_consultation_items_sort_path %>">
        <% @consultation_items.each do |consultation_item| %>
          <li data-id="<%= consultation_item.id %>">
            <%= link_to edit_admin_budget_consultation_consultation_item_path(@consultation, consultation_item) do %>
              <i class="fa fa-edit"></i>
              <span><%= consultation_item.title %></span>
              <i class="sort-handler fa fa-bars f_right"></i>
            <% end %>
          </li>
        <% end %>
      </ul>

      <ul class="block_list">
        <li class="sep">
          <%= link_to new_admin_budget_consultation_consultation_item_path(@consultation) do %>
            <i class="fa fa-add"></i>
            <span>Añadir nueva partida</span>
          <% end %>
        </li>
      </ul>
    </div>

  </div>

  <div class="pure-u-1 pure-u-md-2-24"></div>

  <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

    <%= render "consultation_form" %>

  </div>

</div>

<% content_for :javascript_hook do %>
  <%= javascript_tag do %>
    window.GobiertoAdmin.consultation_items_controller.index();
  <% end %>
<% end %>
